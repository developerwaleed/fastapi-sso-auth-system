    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Google Login - Get Authorization URL",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/google/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "google", "login"]
            },
            "description": "Get Google OAuth authorization URL. Copy the URL and open in browser to complete OAuth flow."
          }
        },
        {
          "name": "GitHub Login - Get Authorization URL",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/github/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "github", "login"]
            },
            "description": "Get GitHub OAuth authorization URL. Copy the URL and open in browser to complete OAuth flow."
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User (JWT)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "me"]
            },
            "description": "Get current authenticated user profile using JWT token"
          }
        },
        {
          "name": "List All Users (JWT)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ""]
            }
          }
        },
        {
          "name": "Assign Role to User (JWT)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}/roles/{{role_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "{{user_id}}", "roles", "{{role_id}}"]
            }
          }
        },
        {
          "name": "Remove Role from User (JWT)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}/roles/{{role_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "{{user_id}}", "roles", "{{role_id}}"]
            }
          }
        }
      ]
    },
    {
