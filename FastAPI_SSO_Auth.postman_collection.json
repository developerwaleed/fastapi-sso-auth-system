          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api-keys/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "api-keys", "1"]
            }
          }
        }
      ]
    },
